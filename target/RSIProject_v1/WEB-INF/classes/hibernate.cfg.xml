<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/ferwafadb</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">root</property>
		<!-- <property name="hbm2ddl.auto">update</property>
		<property name="hibernate.show_sql">true</property> -->
		<property name="hibernate.current_session_context_class">thread</property>
		<mapping class="ferwafa.domain.Champion" />
		<mapping class="ferwafa.domain.MatchClass" />
		<mapping class="ferwafa.domain.Stadium" />
		<mapping class="ferwafa.domain.Player" />
		<mapping class="ferwafa.domain.Referees" />
		<mapping class="ferwafa.domain.Team" />
		<mapping class="ferwafa.domain.Users" />
		<mapping class="ferwafa.domain.UserCategory" />
		<mapping class="ferwafa.domain.MatchDetails" />
		<mapping class="ferwafa.domain.MatchReferees" />
		<mapping class="ferwafa.domain.LoginHistoric" />
		<mapping class="ferwafa.domain.Documents" />
		<mapping class="ferwafa.domain.UploadingTeamLogo" />
		<mapping class="ferwafa.domain.RegistrationRequest" />
	</session-factory>
</hibernate-configuration>

